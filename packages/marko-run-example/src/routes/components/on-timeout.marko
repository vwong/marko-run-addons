<!-- ise tags -->
export interface Input {
  handler: () => void;
  value: number;
}

<let/timer=(0 as unknown as ReturnType<typeof setTimeout>)/>

<const/reset=(
  () => {
    if (timer) {
      clearTimeout(timer);
    }

    timer = setTimeout(() => {
      input.handler();
    }, input.value);
  }
)/>

<return={ reset }/>

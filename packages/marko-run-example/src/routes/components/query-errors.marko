<if($global.lastQueryErrors.length)>
  <div class="search-param-errors">
    <for|{ name, message }| of=$global.lastQueryErrors>
      <notification level="error">
        ${name} ${message}
      </notification>
    </for>
  </div>
</if>

style.scss {
  .search-param-errors {
    position: fixed;
    right: $s-16;
    top: $v-20;
  }
}

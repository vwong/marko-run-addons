style.scss {
  :root {
    color-scheme: light dark;
  }

  .light {
    color-scheme: light;
  }

  .dark {
    color-scheme: dark;
  }

  :focus-visible {
    outline: 2px dashed $color-accent;
    outline-offset: 1px;
    position: relative;
    z-index: 1;
  }

  * {
    margin: 0;
  }

  html {
    background-color: light-dark($color-neutral-00, $color-neutral-98);
    color: light-dark($color-neutral-98, $color-neutral-00);
    font-family: $font-family-sans-serif;
    line-height: 1.25;
  }

  h1 {
    font-size: 1.44rem;
    font-weight: $font-weight-medium;
    line-height: $v-30;
  }

  h2 {
    font-size: 1.2rem;
    font-weight: $font-weight-medium;
    line-height: $v-30;
  }

  label {
    color: light-dark($color-neutral-80, $color-neutral-30);
    display: block;
    font-size: 0.75rem;
    line-height: $v-20;
    text-transform: uppercase;
  }

  input,
  select,
  textarea {
    accent-color: $color-accent;
    border: 1px solid $color-line;
    border-radius: $radius-m;
    box-sizing: border-box;
    font-family: inherit;
    font-size: 1em;
    height: $v-30;
    padding: $s-8;

    &[type="email"],
    &[type="number"],
    &[type="password"],
    &[type="search"],
    &[type="text"] {
      width: 100%;
    }

    &:hover {
      border-color: $color-accent;
    }

    &[disabled],
    &[readonly] {
      background-color: $background-color-disabled;
      color: $color-disabled;
      cursor: not-allowed;
    }

    &[type="email"],
    &[type="password"],
    &[type="search"],
    &[type="text"] {
      width: 100%;
    }

    &[aria-invalid="true"],
    &:invalid {
      border-color: $color-error;

      &:focus-visible {
        outline-color: $color-error;
      }
    }
  }

  a {
    color: inherit;
    text-decoration: none;
  }
}

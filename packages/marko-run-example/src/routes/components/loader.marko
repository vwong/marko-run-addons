import "#styles/visually-hidden.scss";
<span class="loader">
  <span class="loader__spinner">
    <icon="loader"/>
    <span class="visually-hidden">
      Please wait
    </span>
  </span>
   &nbsp;
</span>

style.scss {
  .loader {
    position: relative;

    &__spinner {
      animation: spin 2s linear infinite;
      position: absolute;
    }
  }

  @keyframes spin {
    100% {
      transform: rotate(360deg);
    }
  }
}

style.scss {
  .tile {
    border: 1px solid $color-line;
    border-radius: $radius-m;
    position: relative;

    &:hover {
      border-color: $color-accent;
    }

    &::before {
      border-radius: $radius-m;
      box-shadow: $shadow;
      content: "";
      inset: 0;
      opacity: 0;
      position: absolute;
      transition: opacity 300ms ease-in-out;
    }

    &:hover::before,
    &:focus-within::before {
      opacity: 1;
    }
  }
}

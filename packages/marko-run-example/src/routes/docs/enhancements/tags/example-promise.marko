export interface Input {
  message: string;
  value: Promise<void>;
}

<try>
  <if=$global.hasClientJs>
    <@placeholder>
      <notification="information">
        <loader/>
      </notification>
    </@placeholder>
  </if>
  <@catch>
    <notification="error">
      Fragment Error
    </notification>
  </@catch>
  <await|_|=input.value>
    <notification="success">
      ${input.message}
    </notification>
  </await>
</try>

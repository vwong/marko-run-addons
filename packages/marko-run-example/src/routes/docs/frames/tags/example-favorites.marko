import "#styles/button.scss";
export interface Input {
  name: string;
}

<let/key=0>
<let/isPending=false>
<let/isError=false>

<enhanced-form
  action=`${$global.url.pathname}/~favorites/${input.name}`
  class="example-favorites"
  isError:=isError
  isPending:=isPending
  method="POST"
  onSuccess() {
    key = Math.random();
  }>
  <csrf-token/>

  <button class="button" disabled=isPending type="submit">
    Favorite ${input.name}
  </button>

  <if=isError>
    <notification level="error">
      Error incrementing favorite
    </notification>
  </if>

  <fragment
    errorMessage="Error retrieving updated favorite"
    src=`${$global.url.pathname}/~favorites/${input.name}#${key}`/>
</enhanced-form>

<style.scss>
  .example-favorites {
    align-items: center;
    display: flex;
    gap: $s-8;
  }
</style>

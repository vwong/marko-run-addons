{
  "name": "@marko/run-addons",
  "private": true,
  "devDependencies": {
    "@eslint/js": "^9.14.0",
    "@marko/testing-library": "^6.2.0",
    "@marko/type-check": "^1.2.4",
    "@vitest/coverage-v8": "^2.1.4",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.14.0",
    "eslint-config-prettier": "^9.1.0",
    "globals": "^15.12.0",
    "htmljs-parser": "^5.5.2",
    "postcss": "^8.4.48",
